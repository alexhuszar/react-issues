{
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "classes": true,
      "jsx": true
    }
  },
  "plugins": [
    "react"
  ],
  "rules": {
    "keyword-spacing": "warn",
    "switch-colon-spacing": 0,
    "padded-blocks": 0,
    "comma-dangle": 0,
    "object-curly-spacing": 0,
    "semi": 0,
    "require-jsdoc": ["warn", {"require": {"FunctionDeclaration": true, "MethodDefinition": true, "ClassDeclaration": false, "ArrowFunctionExpression": true}}],
    "valid-jsdoc": ["warn", {
      "requireParamDescription": false,
      "requireReturnDescription": false
    }],
    "camelcase": "warn",
    "brace-style": "warn",
    "no-unused-vars": ["warn"],
    "max-len": ["warn", 80, 2, { "ignoreComments": true }],
    "space-infix-ops": "warn",
    "no-trailing-spaces": "warn",
    "indent": ["warn", 2, { "SwitchCase": 1 }],
    "linebreak-style": ["warn", "unix"],
    "quotes": ["warn", "single"],
    "no-extra-semi": "warn",
    "no-extra-boolean-cast": "warn",
    "no-console": "warn",
    "key-spacing": ["warn", {"beforeColon": false, "afterColon": true}],
    "comma-spacing": ["warn", {"before": false, "after": true}],
    "semi-spacing": ["warn", {"before": false, "after": true }],
    "space-before-function-paren": ["warn", "never"],
    "space-before-blocks": ["warn"],
    "no-multiple-empty-lines": ["warn", {"max": 1, "maxEOF": 1, "maxBOF": 1}],
    "spaced-comment": ["warn", "always"],
    "react/jsx-no-duplicate-props": "warn",
    "react/no-unescaped-entities": 0,
    "react/prop-types": "warn",
    "react/display-name": "warn",
    "react/jsx-indent": ["warn", 2],
    "react/jsx-indent-props": ["warn", 2],
    "react/jsx-closing-bracket-location": "warn",
    "react/jsx-curly-spacing": ["warn", "never"],
    "react/jsx-key": "warn",
    "react/jsx-tag-spacing": ["warn", {}],
    "react/jsx-no-undef": "warn",
    "react/jsx-pascal-case": "warn",
    "react/jsx-wrap-multilines": "warn",
    "react/jsx-no-bind": "warn",
    "react/jsx-handler-names": "warn",
    "react/jsx-equals-spacing": ["warn", "never"]
  },
  "globals": {
    "dispatch": true,
    "getState": true,
    "resetState": true,
    "describe": true,
    "it": true,
    "expect": true,
    "before": true,
    "beforeEach": true,
    "afterEach": true,
    "after": true
  }
}
